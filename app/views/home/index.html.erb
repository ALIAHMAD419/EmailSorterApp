<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="text-center bg-white shadow-lg rounded-xl p-8 w-full max-w-md">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">Welcome to Our Email Sorting Application</h1>
    <p class="text-gray-600 mb-6">Sign in to explore amazing features.</p>
    <% if logged_in? %>
      <p class="text-lg text-green-600 font-semibold">Hello, <%= current_user.name %> ðŸ‘‹</p>
      <%= form_with url: logout_path, method: :delete do %>
        <%= submit_tag "Logout", class: "bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-lg shadow-md transition cursor-pointer" %>
      <% end %>
    <% else %>
      <%= link_to "/auth/google_oauth2", class: "inline-block" do %>
        <img src="https://developers.google.com/identity/images/btn_google_signin_light_normal_web.png" 
             alt="Sign in with Google" 
             class="w-48 mx-auto hover:opacity-80 transition">
      <% end %>
    <% end %>
  </div>
</div>
