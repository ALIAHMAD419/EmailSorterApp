<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">ðŸ“‚ My Categories</h1>
    <%= link_to 'âž• Add New Category', new_category_path, class: 'btn btn-success' %>
  </div>

  <% if @categories.any? %>
    <table class="table table-striped table-hover shadow-lg">
      <thead class="bg-primary text-white">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><strong><%= category.name %></strong></td>
            <td><%= category.description.presence || "No description available" %></td>
            <td class="text-center">
              <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Delete', category_path(category), data: { turbo_method: :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info text-center">
      No categories found. <%= link_to 'Add one now!', new_category_path, class: 'alert-link' %>
    </div>
  <% end %>
</div>
