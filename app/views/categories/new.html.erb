<div class="container mt-5">
  <div class="card shadow-lg p-4">
    <h2 class="text-center text-primary mb-4">➕ Create New Category</h2>

    <%= form_with model: @category, local: true, class: "needs-validation" do |form| %>
      <div class="mb-3">
        <%= form.label :name, class: "form-label fw-bold" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter category name", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: "form-label fw-bold" %>
        <%= form.text_area :description, class: "form-control", placeholder: "Enter category description", rows: 4 %>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to "⬅️ Back", categories_path, class: "btn btn-secondary" %>
        <%= form.submit "Create Category", class: "btn btn-success fw-bold px-4" %>
      </div>
    <% end %>
  </div>
</div>
